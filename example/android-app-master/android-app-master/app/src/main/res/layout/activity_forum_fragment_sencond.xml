<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/holo_blue_dark">

        <ImageView
            android:id="@+id/iv_black_activity_forum_fragment_sencond"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_navigate_before_black_24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情内容"
            android:textSize="24dp"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"/>

    </RelativeLayout>



        <ImageView
            android:id="@+id/iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher"/>

        <TextView
    android:id="@+id/tv_user_name_activity_forum_fragment_sencond"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:textSize="24dp"
    android:text="用户名"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/holo_blue_dark"/>
    <TextView
        android:id="@+id/tv_user_content_activity_forum_fragment_sencond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="24dp"
        android:text="发表内容"/>

    <ImageView
        android:id="@+id/iv_url_activity_forum_fragment_sencond"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_launcher"/>
        
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_marginTop="20dp"
           android:layout_height="wrap_content">


           <TextView
               android:id="@+id/tv_user_time_activity_forum_fragment_sencond"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:text="00.00.00:00"
               android:textSize="16dp"/>



               <TextView
                   android:id="@+id/tv_number_activity_forum_fragment_senconf"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="0000"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="9dp"
                   android:textSize="16dp" />


       </RelativeLayout>

</LinearLayout>
</ScrollView>