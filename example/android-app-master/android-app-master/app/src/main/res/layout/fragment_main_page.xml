<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_indicator_fragment_main_page"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:orientation="horizontal"/>

        <ImageView
            android:id="@+id/iv_add_fragment_main_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/plus"
            android:layout_gravity="center"/>

    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>

        <com.youth.banner.Banner
            android:id="@+id/banner_fragment_main_page"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_practice_everyday_fragment_main_page"
                android:paddingTop="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:drawableTop="@mipmap/ic_feature_everypratice"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="每日一练"/>
            <TextView
                android:id="@+id/tv_mock_exam_fragment_main_page"
                android:paddingTop="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:drawableTop="@mipmap/ic_feature_everypratice"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="模拟卷"/>
            <TextView
                android:id="@+id/tv_real_topic_fragment_main_page"
                android:paddingTop="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:drawableTop="@mipmap/ic_feature_everypratice"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="真题"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_examination_fragment_main_page"
                android:paddingTop="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:drawableTop="@mipmap/ic_feature_everypratice"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="考点难点"/>
            <TextView
                android:id="@+id/tv_mistakes_fragment_main_page"
                android:paddingTop="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:drawableTop="@mipmap/ic_feature_everypratice"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="错题本"/>
        </LinearLayout>

</LinearLayout>