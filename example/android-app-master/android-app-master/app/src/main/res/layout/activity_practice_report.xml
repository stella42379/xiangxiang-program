<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PracticeReport">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:color/holo_blue_dark"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/iv_return_activity_practice_report"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/go_back_selector"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="练习报告"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:layout_centerInParent="true"
        android:layout_height="56dp"/>


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:textSize="24dp"
        android:text="练习类型：每日一练"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/holo_blue_dark"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_height="40dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:layout_height="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="24dp"
            android:text="交卷时间:"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:text="0000.00.00  00:00"
            android:textSize="16dp"
            android:layout_marginLeft="8dp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_number_activity_practice_report"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:text="答对00题"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:background="@drawable/tv_item_practice_report_correct"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_activity_practice_report"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_wrong_topic"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="错题解析"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="20dp"/>
        <View
            android:layout_width="1dp"
            android:background="@android:color/white"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_all_question_activity_practice_report"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="全部解析"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="20dp"/>
    </LinearLayout>


</LinearLayout>