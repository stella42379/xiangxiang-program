<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_page_background"
    android:fillViewport="true">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        
        <!-- 欢迎区域 - 对应小程序的seal_group -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">
            
            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="欢迎回来！"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text" />
            
            <TextView
                android:id="@+id/tv_welcome_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Back!"
                android:textSize="16sp"
                android:textColor="@color/secondary_text"
                android:layout_marginTop="4dp" />
        </LinearLayout>
        
        <!-- 湘湘管家对话区域 - 对应小程序的seal_group_1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/layout_chat_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:backgroundTint="#80FFFFFF">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                
                <!-- 管家介绍 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">
                    
                    <ImageView
                        android:id="@+id/iv_manager_avatar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_profile"
                        android:background="@drawable/circle_background" />
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">
                        
                        <TextView
                            android:id="@+id/tv_manager_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="湘湘管家"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_text" />
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我是你的湘湘橘子头管家！"
                            android:textSize="14sp"
                            android:textColor="@color/secondary_text"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
                
                <!-- 管家问候 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">
                    
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_profile"
                        android:background="@drawable/circle_background" />
                    
                    <TextView
                        android:id="@+id/tv_manager_greeting"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="请问有什么需要帮助的吗？"
                        android:textSize="14sp"
                        android:textColor="@color/primary_text"
                        android:background="@drawable/chat_bubble_ai"
                        android:padding="12dp" />
                </LinearLayout>
                
                <!-- 输入区域 - 对应小程序的输入框 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/input_area_background"
                    android:padding="8dp">
                    
                    <EditText
                        android:id="@+id/et_chat_input"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:hint="在这儿输入你的第一句话"
                        android:background="@drawable/input_background"
                        android:padding="12dp"
                        android:textSize="14sp"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/hint_text"
                        android:maxLines="1"
                        android:imeOptions="actionSend" />
                    
                    <Button
                        android:id="@+id/btn_send"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/send_button_background"
                        android:text="📤"
                        android:textSize="18sp"
                        android:padding="0dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        
        <!-- 主要业务标题 - 对应小程序的signup_2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主要业务"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主要的一些功能"
                android:textSize="14sp"
                android:textColor="@color/secondary_text"
                android:layout_marginTop="4dp" />
        </LinearLayout>
        
        <!-- 维修服务轮播 - 对应小程序的maintenanceSwiper -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_maintenance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />
        </androidx.cardview.widget.CardView>
        
        <!-- 紧急服务轮播 - 对应小程序的emergencySwiper -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_emergency"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />
        </androidx.cardview.widget.CardView>
        
        <!-- 底部提示 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下面没有了~"
            android:textSize="14sp"
            android:textColor="@color/hint_text"
            android:gravity="center"
            android:layout_marginTop="20dp" />
        
    </LinearLayout>
</ScrollView>