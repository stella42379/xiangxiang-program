<?xml version="1.0" encoding="utf-8"?>
<!-- 关键修改：FrameLayout作为根容器，支持背景图片 -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <!-- 🎯 背景图片层 - 全屏固定背景 -->
    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_main_page_fallback"
        android:adjustViewBounds="false" />
    
    <!-- 🎯 内容滚动层 - 透明背景 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:fillViewport="true">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <!-- 1. 顶部欢迎区域 - 使用纯渐变而非图片 -->
            <LinearLayout
                android:id="@+id/layout_welcome_section"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@drawable/bg_welcome_fallback"
                android:padding="30dp"
                android:gravity="center_vertical">
                
                <TextView
                    android:id="@+id/tv_welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="欢迎回来！"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#041830"
                    android:shadowColor="#40000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4" />
                
                <TextView
                    android:id="@+id/tv_welcome_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome Back!"
                    android:textSize="16sp"
                    android:textColor="#041830"
                    android:layout_marginTop="8dp"
                    android:shadowColor="#40000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4" />
            </LinearLayout>
            
            <!-- 2. 湘湘管家对话区域 - 真正的毛玻璃效果 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/layout_chat_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">
                
                <!-- 🎯 关键：使用真正的毛玻璃背景 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_glass_blur_strong"
                    android:padding="20dp">
                    
                    <!-- 管家第一条消息 - 🎯 修复布局：头像固定+气泡限宽 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">
                        
                        <ImageView
                            android:id="@+id/iv_manager_avatar_1"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_avatar_placeholder"
                            android:background="@drawable/shape_avatar_glass" />
                        
                        <!-- 🎯 占位容器吃掉剩余空间 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="start"
                            android:layout_marginStart="12dp">
                            
                            <!-- 🎯 真正的气泡：wrap_content + 最大宽度 -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxWidth="280dp"
                                android:orientation="vertical"
                                android:background="@drawable/bg_chat_bubble_glass"
                                android:padding="12dp">
                                
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="湘湘管家"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#484d61" />
                                
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="我是你的湘湘橘子头管家！"
                                    android:textSize="14sp"
                                    android:textColor="#484d61"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    
                    <!-- 管家第二条消息 - 🎯 同样的修复布局 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">
                        
                        <ImageView
                            android:id="@+id/iv_manager_avatar_2"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_avatar_placeholder"
                            android:background="@drawable/shape_avatar_glass" />
                        
                        <!-- 🎯 占位容器吃掉剩余空间 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="start"
                            android:layout_marginStart="12dp">
                            
                            <!-- 🎯 真正的气泡：wrap_content + 最大宽度 -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxWidth="280dp"
                                android:orientation="vertical"
                                android:background="@drawable/bg_chat_bubble_glass"
                                android:padding="12dp">
                                
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="湘湘管家"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#484d61" />
                                
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="请问有什么需要帮助的吗？"
                                    android:textSize="14sp"
                                    android:textColor="#484d61"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    
                    <!-- 输入区域 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <EditText
                            android:id="@+id/et_chat_input"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:hint="在这儿输入你的第一句话"
                            android:background="@drawable/bg_input_glass"
                            android:padding="12dp"
                            android:textSize="14sp"
                            android:textColor="#484d61"
                            android:textColorHint="#999999"
                            android:maxLines="1"
                            android:imeOptions="actionSend" />
                        
                        <ImageButton
                            android:id="@+id/btn_send"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="12dp"
                            android:background="@drawable/bg_send_button_glass"
                            android:src="@drawable/ic_send"
                            android:scaleType="centerInside"
                            android:padding="12dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            
            <!-- 3. 主要业务标题 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="20dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主要业务"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#1B1F26"
                    android:textShadow="0 2dp 4dp #40000000" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主要的一些功能"
                    android:textSize="16sp"
                    android:textColor="#1B1F26"
                    android:alpha="0.7"
                    android:layout_marginTop="4dp"
                    android:textShadow="0 1dp 2dp #40000000" />
            </LinearLayout>
            
            <!-- 4. 主要功能区域 - 毛玻璃容器 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_glass_blur_light"
                    android:padding="24dp">
                    
                    <!-- 日常检查大卡片 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_daily_inspection"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@drawable/bg_inspection_card_glass"
                            android:padding="24dp"
                            android:gravity="center">
                            
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_inspection"
                                android:layout_marginBottom="12dp" />
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="日常检查"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="white"
                                android:layout_marginBottom="8dp" />
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="定期安全检查，预防潜在风险"
                                android:textSize="14sp"
                                android:textColor="white"
                                android:alpha="0.9"
                                android:layout_marginBottom="16dp"
                                android:gravity="center" />
                            
                            <Button
                                android:id="@+id/btn_start_inspection"
                                android:layout_width="120dp"
                                android:layout_height="36dp"
                                android:text="开始检查"
                                android:textColor="white"
                                android:background="@drawable/bg_inspection_button_glass"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    
                    <!-- 紧急送医大卡片 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_emergency_medical"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@drawable/bg_emergency_card_glass"
                            android:padding="24dp"
                            android:gravity="center">
                            
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_ambulance"
                                android:layout_marginBottom="12dp" />
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="紧急送医"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="white"
                                android:layout_marginBottom="8dp" />
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="紧急情况快速救助，医疗运送服务"
                                android:textSize="14sp"
                                android:textColor="white"
                                android:alpha="0.9"
                                android:layout_marginBottom="16dp"
                                android:gravity="center" />
                            
                            <Button
                                android:id="@+id/btn_emergency_call"
                                android:layout_width="120dp"
                                android:layout_height="36dp"
                                android:text="紧急呼叫"
                                android:textColor="white"
                                android:background="@drawable/bg_emergency_button_glass"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            
            <!-- 5. 底部文本 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="下面没有了~"
                android:textSize="14sp"
                android:textColor="#999999"
                android:layout_margin="20dp"
                android:textShadow="0 1dp 2dp #40000000" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>