<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/emergency_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_send"
            android:contentDescription="@string/emergency_icon"
            android:background="@drawable/glass_card_background" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/emergency_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="紧急服务名称"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/emergency_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="紧急服务描述信息"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/emergency_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话：120"
                android:textSize="12sp"
                android:textColor="@color/design_default_color_primary" />
        </LinearLayout>

        <Button
            android:id="@+id/call_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拨打"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@drawable/primary_button_background"
            android:padding="8dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
