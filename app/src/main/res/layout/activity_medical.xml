<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_page_background">

    <!-- 工具栏 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/design_default_color_primary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="紧急送医"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@android:drawable/ic_menu_send" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 紧急呼叫按钮 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="紧急呼叫"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/emergency_call_button"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="拨打120"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/primary_button_background"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/emergency_number_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="紧急电话：120"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_gravity="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 附近医院 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="附近医院"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/nearest_hospital_button"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="查找最近医院"
                        android:textColor="@android:color/white"
                        android:background="@drawable/primary_button_background"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/hospital_info_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击查找附近医院"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 医疗记录 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="医疗记录"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/medical_record_button"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="查看医疗记录"
                        android:textColor="@android:color/white"
                        android:background="@drawable/primary_button_background"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/medical_record_info_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看历史医疗信息"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 救护车服务 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="救护车服务"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/ambulance_button"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="呼叫救护车"
                        android:textColor="@android:color/white"
                        android:background="@drawable/primary_button_background"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/ambulance_info_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="紧急救护车服务"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- 加载指示器 -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</LinearLayout>
